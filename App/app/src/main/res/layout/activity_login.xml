<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00a9f7"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:showDividers="none"
    android:weightSum="1"
    tools:context="com.cse110.app.Login">

    <!-- Login progress -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.31"
        android:text="ConnectU"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".edu E-mail"
        android:textColor="#fff200" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:autoText="false"
        android:background="#cdcdcd"
        android:hint="example@school.edu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#dce824" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#cdcdcd"
        android:hint="************"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#dd524d"
        android:text="Login" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09" />

    <Button
        android:id='@+id/tvRegisterLink'
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:background="#dd534e"
        android:password="false"
        android:text="New Account" />

</LinearLayout>
